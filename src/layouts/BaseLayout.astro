---
// Import Components
import CommonMeta from '@/components/seo/CommonMeta.astro'
import SiteVerification from '@/components/analytics/SiteVerification.astro'
import TagManager from '@/components/analytics/TagManager.astro'
import WebVitals from '@/components/analytics/WebVitals.astro'
import Performance from '@/components/performance/Performance.astro'
import Meta from '@/components/seo/Meta.astro';
import Schema from '@/components/seo/Schema.astro';
import Favicons from '@/components/seo/Favicons.astro';
import '@/assets/styles/global.css';
import '@/assets/fonts/inter.css';

// Import components
//import Nav from '@/components/common/Nav.astro';

// Import Types
import type { MetaData } from '@/types/seo';
import type { SchemaData } from '@/types/seo';

export interface Props {
  metadata?: MetaData;
  schemaData?: SchemaData[];
}

const { metadata = {}, schemaData = [] } = Astro.props;

---
<!doctype html>
<html lang="en">
  <head>
    <CommonMeta />
    <SiteVerification />
    <TagManager />
	  <Favicons />
    <Meta {...metadata} />
    <Schema schemaData={schemaData} />
    <Performance />
    <WebVitals />
    
    <!-- Preload critical fonts (commented until font files are added) -->
    <!-- <link rel="preload" href="/src/assets/fonts/inter-400.woff2" as="font" type="font/woff2" crossorigin> -->
    <!-- <link rel="preload" href="/src/assets/fonts/inter-500.woff2" as="font" type="font/woff2" crossorigin> -->
    
    <!-- Sentry Error Monitoring (Client-Side Only) -->
    <script type="module" is:inline>
      import { ENV } from '/src/utils/env.js';
      
      if (ENV.SENTRY_DSN && !import.meta.env.DEV) {
        const { initSentry } = await import('/src/utils/security/monitoring.js');
        initSentry();
      }
    </script>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>