---
import SiteLayout from '@/layouts/SiteLayout.astro';
import ContactForm from '@/components/blocks/contactform.astro';
import Pricing from '@/components/blocks/pricing.astro';
import CTA from '@/components/blocks/CTA.astro';
import type { ContactPage, WithContext } from 'schema-dts';

// Page SEO
const title = 'Contact Us | Technical SEO Starter';
const description = 'Get in touch with our technical SEO experts. We are here to help.';

// Schema.org ContactPage
const schema: WithContext<ContactPage> = {
  '@context': 'https://schema.org',
  '@type': 'ContactPage',
  name: title,
  description,
  url: new URL('/contact', Astro.site).toString(),
  breadcrumb: {
    '@type': 'BreadcrumbList',
    itemListElement: [
      { '@type': 'ListItem', position: 1, name: 'Home', item: Astro.site?.toString() },
      { '@type': 'ListItem', position: 2, name: 'Contact' },
    ],
  },
};
---

<SiteLayout title={title} description={description} schema={schema}>
  <ContactForm />
  <Pricing />
  <CTA />
</SiteLayout>
