---
/**
 * FAQ Component
 * Simple, non-collapsible FAQ section - always visible for web scrapers
 * 
 * Usage:
 * <FAQ faqs={[
 *   { question: "What is...?", answer: "It is..." },
 *   { question: "How do I...?", answer: "You can..." },
 * ]} />
 */

interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  badge?: string;
  title?: string;
  description?: string;
  faqs: FAQItem[];
}

const {
  badge = 'FAQ',
  title = 'Frequently asked questions',
  description,
  faqs,
} = Astro.props;
---

<div class="bg-white py-24 sm:py-32 dark:bg-gray-900">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:text-center">
      <h2 class="text-base/7 font-semibold text-indigo-600 dark:text-indigo-400">{badge}</h2>
      <p class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl lg:text-balance dark:text-white">{title}</p>
      {description && (
        <p class="mt-6 text-lg/8 text-gray-600 dark:text-gray-400">{description}</p>
      )}
    </div>
    
    <dl class="mx-auto mt-16 max-w-2xl space-y-8 sm:mt-20">
      {faqs.map((faq) => (
        <div class="border-b border-gray-200 pb-8 dark:border-gray-700">
          <dt class="text-lg font-semibold text-gray-900 dark:text-white">
            {faq.question}
          </dt>
          <dd class="mt-3 text-base/7 text-gray-600 dark:text-gray-400">
            {faq.answer}
          </dd>
        </div>
      ))}
    </dl>
  </div>
</div>
