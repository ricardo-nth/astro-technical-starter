---
/**
 * Microsoft Clarity Analytics
 * Set Clarity ID via props or PUBLIC_CLARITY_ID environment variable
 */
interface Props {
  clarityId?: string;
}

const { clarityId = import.meta.env.PUBLIC_CLARITY_ID } = Astro.props;
const isProd = import.meta.env.PROD;

const clarityScript = clarityId ? `
  (function(c,l,a,r,i,t,y){
    c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
    t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
    y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
  })(window, document, "clarity", "script", "${clarityId}");
` : '';
---

{isProd && clarityId && (
  <script type="text/partytown" is:inline set:html={clarityScript}></script>
)}
