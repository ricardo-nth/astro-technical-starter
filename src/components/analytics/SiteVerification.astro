---
/**
 * Site Verification Meta Tags
 * Add your verification codes via props or environment variables
 */
interface Props {
  google?: string;
  bing?: string;
  pinterest?: string;
}

const { 
  google = import.meta.env.PUBLIC_GOOGLE_VERIFICATION,
  bing = import.meta.env.PUBLIC_BING_VERIFICATION,
  pinterest = import.meta.env.PUBLIC_PINTEREST_VERIFICATION,
} = Astro.props;
---

{google && <meta name="google-site-verification" content={google} />}
{bing && <meta name="msvalidate.01" content={bing} />}
{pinterest && <meta name="p:domain_verify" content={pinterest} />}
